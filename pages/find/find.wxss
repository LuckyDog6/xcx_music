.title{
  width: 750rpx;
  height: 150rpx;
  background-color: rgba(105, 105, 105, 0.717);
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
}
.tleft{
  width: 70%;
  display: flex;
  flex-direction: column;
}
.tright{
  display: flex;
  flex-direction: column;
  margin-left: 100rpx;
  color: aliceblue;
}
.text1{
  color: aliceblue;
  margin-left: 30rpx;
  margin-top: 10rpx;
}
.text2{
  color: rgba(214, 219, 222, 0.614);
  margin-left: 30rpx;
  margin-top: 30rpx;
  font-size: 12px;
}
.text3{
  margin-top: 20rpx;

}
.text4{
  font-size: 22px;
  font-weight: bold;
}
.show-info {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 10rpx 0;
  box-sizing: border-box;
  background-color: antiquewhite;
}

.left {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin: 10rpx 10rpx;
}

.left image{
  width: 100%;
  border-radius: 10rpx;
}
.right {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin: 10rpx 10rpx;
}

.right image{
  width: 100%;
}
.text{
  font-size: 11px;
}
.images{
  background-color: aliceblue;
  margin-bottom: 10rpx;
}