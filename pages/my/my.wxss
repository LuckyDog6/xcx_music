  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
}
.index2 {
  display: flex;
  flex-direction: column;
  width: 60px;
  align-items: center;
  margin-top: 10rpx;
}
.image{
  width: 110rpx;
