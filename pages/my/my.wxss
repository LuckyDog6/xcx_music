.top{
  width: 100%;
  height: 300rpx;
  background-color: #DC143C;
}
.top .user{
  display: flex;
  flex-direction: column;
}
.top .user .avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 98rpx;
  margin-left: 20rpx;
}
.top .user text{
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.user .info{
  display: flex;
  flex-direction: column;
}
.nickname{
  font-size: 16px;
  margin-left: 10rpx;
  color: rgb(255, 255, 255)
}
.edit{
  width: 85rpx;
  height: 50rpx;
  margin-left: 300rpx;
  margin-top: 10rpx;
  border-radius: 50rpx;
  background-color: rgb(134, 131, 131);
  display: flex;
}
.edit text{
  font-size: 12px;
  display: flex;
  color: rgb(255, 255, 255) !important;
  align-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.bg{
  width: 130rpx;
  height: 50rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
  border-radius: 50rpx;
  background-color: rgb(134, 131, 131);
  display: flex;
}
.bg text{
  font-size: 12px;
  display: flex;
  color: rgb(255, 255, 255) !important;
  align-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.more{
  display: flex;
  flex-direction: row;
}
.more text{
  font-size: 10px;
  color: rgb(196, 190, 190);
