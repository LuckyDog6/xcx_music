.container {
  background-color: rgb(236, 232, 240);
}

.desc {
  background-color: rgba(23, 109, 80, 0.205);
  height: 350rpx;
  width: 100%;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
}
.desc image {
  width: 40%;
  /* width: 200rpx; */
  height: 300rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.right {
  width: 60%;
}

.title {
  margin: 20rpx 0rpx;
  color: rgb(250, 250, 250);
}

.author {
  display: flex;
  flex-direction: row;
}

.author image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100rpx;
}

.author text {
  color: rgba(245, 238, 238, 0.637);
  margin: 15rpx 10rpx;
  font-size: 13px;
}

.it {
  margin-left: 10rpx;
}

.descd text {
  font-size: 11px;
  color: rgba(245, 238, 238, 0.637);
  margin: 20rpx 0;
}

.songlist {
  background-color: rgb(250, 250, 250);
  width: 100%;
  border-radius: 20rpx;
  margin-bottom: 150rpx
}

.list {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
}

.son {
  width: 60%;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.index {
  width: 10%;
  color: rgb(143, 140, 140);
  margin: 20rpx;
}

.aut {
  display: flex;
  flex-direction: row;
}

.songname {
  font-weight: bold;
  font-size: 14px;
}

.dujia {
  font-size: 8px;
  color: red;
  border: 1rpx solid red;
  font-weight: bold;
}

.au {
  font-size: 10px;
  color: rgb(143, 140, 140);
  margin-left: 10rpx;
}

.bof {
  margin: 20rpx;
}

.bof image {
  width: 60rpx;
  height: 60rpx;
}

#myAudio {
  display: flex;
  flex-direction: column;
  width: 750rpx;
}

.audio {
  /* border-top: 1rpx solid #ccc; */
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
slider{
  height: 0px;
  width: 750rpx;
  margin-bottom:20rpx;
  margin-top: 0rpx;
  margin-left: 0;
}
.lrb{
  display: flex;
  flex-direction: row
}
.lrb{
  z-index: 999;
  margin-left: 500rpx;
  position: fixed ;
  left: 0;
  bottom: 0;
}
.lrb cover-image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx
}
