page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  /* less中使用calc的时候要注意 */
  height: calc( 100vh - 90rpx );
  display: flex;
}
.cates .cates_container .left_menu {
  /* 子项 高度 100% flex */
  flex: 2;
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .active {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: red;
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .right_content {
  /* 子项 高度 100% flex */
  flex: 5;
}
.cates .cates_container .right_content .singers_group .singers_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates .cates_container .right_content .singers_group .singers_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_content .singers_group .singers_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_content .singers_group .singers_list navigator {
  width: 50%;
  text-align: center;
}
.img {
  width: 200rpx;
  height: 150rpx
}
.singers_name{
  font-size: 10px
}
.count{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center
}
.count image{
  width: 23rpx;
  height: 23rpx;
  margin-right:15rpx;
  margin-left: 100rpx
}
.count text{
  font-size: 10px;
}
